{
  "license": "MIT",
  "version": "0.0.0",
  "private": true,
  "engines": {
    "node": "^12.22.0 || ^14.18 || >=16.0.0"
  },
  "workspaces": [
    "packages/@wesjet/*",
    "packages/*",
    "tests"
  ],
  "keywords": [
    "wesjet",
    "bundler",
    "javascript",
    "typescript",
    "transform",
    "validate"
  ],
  "author": "Wesbitty, Inc",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/wesbitty/wesjet.git"
  },
  "scripts": {
    "postinstall": "ts-patch install -s",
    "prepare": "husky install",
    "pre-commit": "lint-staged",
    "build": "npm run clean && tsc -b tsconfig.pkg.json",
    "postbuild": "npm run build --workspaces --if-present",
    "check-prettier": "prettier --check .",
    "check-eslint": "eslint . --ext .ts --max-warnings=0",
    "format-prettier": "prettier --write .",
    "eslint-fix": "eslint . --ext .ts --fix",
    "clean": "bash -c 'rm -rf packages/*/dist packages/@wesjet/*/dist packages/*/.wesjet'",
    "test": "CI=true VITEST_SEGFAULT_RETRY=3 npm run test --workspaces --parallel"
  },
  "devDependencies": {
    "@babel/core": "^7.21.4",
    "@babel/preset-react": "^7.18.6",
    "@changesets/cli": "^2.26.1",
    "@effect-ts/tracing-plugin": "^0.20.0",
    "@swc/cli": "^0.1.62",
    "@swc/core": "^1.3.46",
    "@types/json-stringify-safe": "^5.0.0",
    "@types/prettier": "^2.7.2",
    "@typescript-eslint/eslint-plugin": "^5.48.1",
    "@typescript-eslint/parser": "^5.48.1",
    "browserslist": "^4.21.5",
    "caniuse-lite": "^1.0.30001476",
    "cross-env": "^7.0.3",
    "cross-spawn": "^7.0.3",
    "eslint": "^8.32.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.4",
    "eslint-plugin-react": "^7.32.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "eslint-plugin-simple-import-sort": "^8.0.0",
    "eslint-plugin-wesjet": "^0.0.20",
    "husky": "^8.0.3",
    "lint-staged": "^13.2.0",
    "npm-run-all": "^4.1.5",
    "pre-commit": "^1.2.2",
    "prettier": "^2.8.3",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "rimraf": "^5.0.0",
    "swr": "^2.1.2",
    "ts-node": "^10.9.1",
    "ts-patch": "^2.1.0",
    "typescript": "^5.0.2"
  },
  "resolutions": {
    "esbuild": "0.17.0",
    "rxjs": "^7.1.0"
  }
}
