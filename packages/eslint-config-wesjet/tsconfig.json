{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnusedLabels": false,
    "declaration": true,
    "esModuleInterop": true,
    "module": "commonjs",
    "moduleResolution": "node",
    "skipLibCheck": true,
    "target": "ES2019",
    "rootDir": "./src",
    "outDir": "./lib"
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
